{
  "manifest_version": 3,
  "name": "FocusTrackâ„¢",
  "version": "1.0",
  "description": "Tracks time spent on websites and blocks distracting sites",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
